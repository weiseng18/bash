# custom git commit for faster commits
# edit as necessary
function gcm() {
  # message is the prepend
  message="ma2001: $@"
  git commit -m "$message"
}

# aliases
alias gaa="git add ."
alias gcm="git commit -m"
alias gdi="git diff"
alias gds="git diff --staged"
alias gst="git st"
alias gp="git push"

alias gpatch="git apply --reject --whitespace=fix"

# aliases for multiple actions
function ga() {
  if [ -z $@ ]; then
    git add .
  else
    git add "$@"
  fi
  git diff --staged
}

function gco() {
  git checkout "$@"
  reload
}

alias gck=". $SCRIPTS/helper/check-git"
